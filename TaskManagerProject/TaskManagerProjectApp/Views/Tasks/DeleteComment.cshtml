@model TaskManagerProject.Domain.Entities.TaskComment

@{
    ViewBag.Title = "DeleteComment";
}

<h2 class="page-header">Delete Comment</h2>
<div class="alert alert-danger">
    <h2 class="">Are you sure you want to delete this comment?</h2>
</div>

<div>
      <form method="post" action="~/Tasks/DeleteComment">
    
        <input type="hidden" name="Comment" value="@Model.Comment" />
        <input type="hidden" name="taskId" value="@Model.TaskId" />
        <input type="hidden" name="commentId" value="@Model.ID" />

            <input type="submit" value="Yes" class="btn btn-success" /> |
            @Html.ActionLink("No", "Details", new { id = ViewBag.taskId }, new { @class = "btn btn-danger" })
       

    </form>
    
</div>
